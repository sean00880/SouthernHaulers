{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@southernhaulers/ui": [
        "../../packages/ui/src"
      ],
      "@southernhaulers/db": [
        "../../packages/db/src"
      ],
      "@southernhaulers/auth": [
        "../../packages/auth/src"
      ]
    },
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "./**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
